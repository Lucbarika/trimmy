<div class="search-content">
  <div class="container">
    <div class="row">
      <%= form_tag hairstylists_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a hairstylist or service"
        %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @hairstylists.each do |hairstylist| %>
      <%= render "components/hairstylist_card", hairstylist: hairstylist %>
    <% end %>
  </div>
</div>
</div>
