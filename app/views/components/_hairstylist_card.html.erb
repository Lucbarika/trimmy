<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1527512950678-b88a241e9f4b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=468789e920b7440447df653edade6df4&auto=format&fit=crop&w=750&q=80');">

  <div class="row">
    <div class="col-md-4 text-left">
      <div class="card-name">
        <div class="hairstylist_name">
          <h2><%= hairstylist.first_name %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-4 text-center">
      <div class="card-services">
        <ul>
          <% hairstylist.services.first(3).each do |service| %>
            <li><%= service.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-4 text-right">
      <div class="card-user">
        <%= image_tag "https://avatars0.githubusercontent.com/u/43472069?v=4", class: "img-circle", size: 75 %>
      </div>
    </div>
  </div>

  <a class="card-link" href="<%= hairstylist_path(hairstylist) %>"></a>

</div>
